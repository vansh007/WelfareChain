{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "es2020",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./scripts",
        "./test",
        "./typechain-types"
    ],
    "exclude": [
        "node_modules"
    ]
}